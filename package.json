{
  "name": "base-file-highlight",
  "displayName": "Base File Highlight",
  "description": "Highlights files with no local dependencies (installed packages only)",
  "version": "0.0.1",
  "publisher": "grayjou",
  "publisherDisplayName": "Grayjou",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Grayjou/BaseFileHighlight"
  },
  "bugs": {
    "url": "https://github.com/Grayjou/BaseFileHighlight/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "highlight",
    "dependencies",
    "file-explorer",
    "python",
    "javascript",
    "typescript"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Base File Highlight",
      "properties": {
        "baseFileHighlight.highlightColor": {
          "type": "string",
          "default": "charts.green",
          "description": "Color to highlight base files (files with no local dependencies). Use color codes like charts.green for mint green."
        },
        "baseFileHighlight.useSymbol": {
          "type": "boolean",
          "default": false,
          "description": "Use a symbol indicator instead of text color to avoid conflicts with compiler errors."
        },
        "baseFileHighlight.symbolColor": {
          "type": "string",
          "default": "#charts.green",
          "description": "Color for the symbol indicator when useSymbol is enabled."
        },
        "baseFileHighlight.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable base file highlighting."
        },
        "baseFileHighlight.fileExtensions": {
          "type": "array",
          "default": [
            ".py",
            ".js",
            ".ts",
            ".jsx",
            ".tsx"
          ],
          "description": "File extensions to analyze for dependencies."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.45.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.1.6"
  }
}
